<script type="text/html" class="pluginConfigForm" id="surfaceplot">
	<ul class="list-group">
		<form role="form">
			<li class="list-group-item">
				<h3>Sort Data</h3>
			</li>
			<li class="list-group-item">
				<select id="selectSort" class="form-control">
					<option value=""></option>
					<option value="x">by x</option>
					<option value="y">by y</option>
					<option value="z">by z</option>
				</select>

			</li>
			<li class="list-group-item">
				<h3>Scale</h3>
			</li>
			<li class="list-group-item">
				<div class="form-group">
					<label class="control-label" for="xScale">X scale</label>
					<div class="controls">
						<input class="form-control" type="text" id="xScale">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label" for="yScale">Y scale</label>
					<div class="controls">
						<input class="form-control" type="text" id="yScale">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label" for="zScale">Z scale</label>
					<div class="controls">
						<input class="form-control" type="text" id="zScale">
					</div>
				</div>

			</form>
		</ul>
	</script>

