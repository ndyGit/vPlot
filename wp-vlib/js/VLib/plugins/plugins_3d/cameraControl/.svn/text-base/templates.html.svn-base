<script type="text/html" class="pluginConfigForm" id="cameraControl">
    <form class="form-horizontal">
        <div class="control-group">

          <div class="well">
              <label class="control-label" for="data">Pivot point</label>
               <div class="controls">
                <div class="input-group">
                  <span class="input-group-addon">x</span>
                  <input id="pos-x" type="text" class="form-control" placeholder="">
                  <span class="input-group-addon">y</span>
                  <input id="pos-y" type="text" class="form-control" placeholder="">
                  <span class="input-group-addon">z</span>
                  <input id="pos-z" type="text" class="form-control" placeholder="">
                </div>
               </div>
        </div>
       <div class="well">
        <div class="form-group">
          <label class="control-label" for="controlTypeSelect">ControlType</label>
          <div class="controls">
            <input class="form-control" type="text" id="controlType" style="display:none;">

          <select id="controlTypeSelect"class="form-control">
            <option value="trackball">Trackball</option>
            <option value="orbit">Orbit</option>

          </select>
          </div>
         </div>
       </div>

       <div class="well">
            <div class="form-group">
                <label class="control-label" for="rotateSpeed">Rotate speed</label>
                <input class="form-control" type="text" id="rotateSpeed" >
            </div>
            <div class="form-group">
                <label class="control-label" for="zoomSpeed">Zoom speed</label>
                <input class="form-control" type="text" id="zoomSpeed" >
            </div>
       </div>

       </div>
    </form>
</script>
