define(['require','core/Utils.vlib'],function(require,UTILS) {
	'use strict';
	var Buffer = (function(){
		var _id = UTILS.getUUID();
		var _modified = false;
		var _attributes;
		return {
			get : function(name){
				return _attributes[name];
			}

		};
	})();
	Buffer.setAttribute = function( name, type, numItems, itemSize ) {
		_attributes[ name ] = {
			modified : false,
			itemSize: itemSize,
			array: new type( numItems * itemSize )
		};
	};
	return Buffer;
});
